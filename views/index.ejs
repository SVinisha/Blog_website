<%- include('header') %>

<div class="container">
    <h1>All Posts</h1>

    <a href="/create" class="btn">Create New Post</a>

    <div class="posts">
        <% posts.forEach(post => { %>
            <div class="post">
                <h2><%= post.title %></h2>
                <p><%= post.body %></p>
                <a href="/edit/<%= post.id %>" class="btn">Edit</a>
                <form action="/delete/<%= post.id %>" method="POST" style="display:inline;">
                    <button type="submit" class="btn delete">Delete</button>
                </form>
            </div>
        <% }) %>
    </div>
</div>
